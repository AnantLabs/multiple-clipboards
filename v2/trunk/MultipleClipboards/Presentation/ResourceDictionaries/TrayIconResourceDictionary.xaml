                    xmlns:Entities="clr-namespace:MultipleClipboards.Entities"
                    xmlns:Layout="clr-namespace:MultipleClipboards.Presentation.Layout">

    <Popup x:Key="TrayPopup" Placement="Custom" AllowsTransparency="True" PopupAnimation="Fade">
        <Border MinWidth="100" MaxWidth="200" MinHeight="75" BorderThickness="4" CornerRadius="2">
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="52" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0 0 10 0" />
            </Grid>
        </Border>
    </Popup>


